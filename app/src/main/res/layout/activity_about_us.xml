<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9">

    <include layout="@layout/layout_toolbar" />

    <ImageView
        android:id="@+id/show_icon"
        android:layout_width="64pt"
        android:layout_height="64pt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80pt"
        android:background="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/tv_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15pt"
        android:text="@string/app_name"
        android:textColor="#666666"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/show_download"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tv_mess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30pt"
        android:background="@mipmap/ic_download_qr" />

    <TextView
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_download"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15pt"
        android:text="@string/share_sub_run"
        android:textColor="#666666"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space1"
        android:layout_marginTop="30pt"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享卡医生"
                android:textColor="@color/black"
                android:textSize="15pt" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20pt"
                android:src="@mipmap/ic_next_gray" />
        </RelativeLayout>

        <View style="@style/common_line" />

        <RelativeLayout
            android:id="@+id/rl_check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测更新"
                android:textColor="@color/black"
                android:textSize="15pt" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20pt"
                android:src="@mipmap/ic_next_gray" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/show_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/service_agreement"
        android:textColor="#666666"
        android:textSize="13sp" />

</RelativeLayout>
