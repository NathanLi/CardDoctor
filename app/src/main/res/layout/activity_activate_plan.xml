<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunkahui.datacubeper.bill.ui.ActivatePlanActivity">

    <include layout="@layout/layout_toolbar"/>

    <TextView
        android:id="@+id/text_view_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10pt"
        android:maxLines="2"
        android:textColor="@color/text_color_orange_ff5c03"
        android:ellipsize="end"
        android:background="@color/bg_corlor_orange_ffe6bc"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10pt"
        android:paddingBottom="10pt"
        android:paddingLeft="15pt"
        android:paddingRight="15pt"
        android:background="@color/white">

        <TextView
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="还款总金额"
            android:textColor="@color/black"
            android:textSize="16pt"/>

        <TextView
            android:id="@+id/text_view_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="16pt"/>

    </LinearLayout>

    <View style="@style/common_line_margin_left_15"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10pt"
        android:paddingBottom="10pt"
        android:paddingLeft="15pt"
        android:paddingRight="15pt"
        android:background="@color/white">

        <TextView
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="还款周期"
            android:textColor="@color/black"
            android:textSize="16pt"/>

        <TextView
            android:id="@+id/text_view_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="16pt"/>

    </LinearLayout>


    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_marginTop="30pt"
        android:background="@drawable/bg_button_login_selector"
        android:text="激活规划"
        android:textColor="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
