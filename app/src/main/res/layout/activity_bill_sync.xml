<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_gray_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:tabIndicatorColor="@color/colorPrimary"
        android:background="@color/white"/>

    <com.yunkahui.datacubeper.common.view.ExportTipView
        android:id="@+id/etw_card_id"
        android:layout_marginTop="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.yunkahui.datacubeper.common.view.ExportTipView
        android:id="@+id/etw_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8pt"
        android:layout_marginRight="8pt"
        android:layout_marginTop="32pt"
        android:background="@drawable/bg_do_plan_button_selector"
        android:gravity="center"
        android:paddingBottom="8pt"
        android:paddingTop="8pt"
        android:text="@string/commit"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_marginTop="24pt"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交即视为同意 " />

        <TextView
            android:id="@+id/tv_service_agreement"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户授权服务协议》" />
    </LinearLayout>
</LinearLayout>