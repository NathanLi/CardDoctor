<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunkahui.datacubeper.bill.ui.FailCardListActivity">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/text_view_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10pt"
        android:paddingLeft="15pt"
        android:paddingRight="15pt"
        android:paddingTop="10pt"
        android:textColor="@color/text_color_orange_ff5c03"
        android:textSize="16pt"
        android:background="@color/bg_corlor_orange_ffe6bc"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10pt" />

</LinearLayout>
