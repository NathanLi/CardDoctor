<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunkahui.datacubeper.bill.ui.FailCardWhyActivity">


    <include layout="@layout/layout_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_corlor_orange_ffe6bc"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15pt"
                android:background="#ff4300"
                android:paddingBottom="3pt"
                android:paddingLeft="7pt"
                android:paddingRight="7pt"
                android:paddingTop="3pt"
                android:text="原因"
                android:textColor="@color/white"
                android:textSize="14pt" />

            <TextView
                android:id="@+id/text_view_why"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="15pt"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff4300"
                android:textSize="16pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10pt"
            android:layout_marginTop="10pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15pt"
                android:background="#ff8316"
                android:paddingBottom="3pt"
                android:paddingLeft="7pt"
                android:paddingRight="7pt"
                android:paddingTop="3pt"
                android:text="解决"
                android:textColor="@color/white"
                android:textSize="14pt" />

            <TextView
                android:id="@+id/text_view_solve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="15pt"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff8316"
                android:textSize="16pt" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_list_item_fail_card" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
