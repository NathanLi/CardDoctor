<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunkahui.datacubeper.mine.ui.MessageActivity">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:layout_margin="20pt"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/linear_layout_radio_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_left_button_shape_normal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_radio_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知信息"
                android:textColor="#0085ff" />

            <TextView
                android:id="@+id/text_view_angle_1"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginLeft="5pt"
                android:background="@drawable/bg_circle_shape_red"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12pt"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_radio_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_right_button_shape_normal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_radio_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统信息"
                android:textColor="#0085ff" />

            <TextView
                android:id="@+id/text_view_angle_2"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginLeft="5pt"
                android:background="@drawable/bg_circle_shape_red"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12pt"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <com.yunkahui.datacubeper.common.view.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
