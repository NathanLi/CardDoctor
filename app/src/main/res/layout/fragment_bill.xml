<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunkahui.datacubeper.home.ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yunkahui.datacubeper.common.view.SimpleToolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_prompt_add_card"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40pt"
        android:paddingRight="40pt"
        android:paddingTop="20pt"
        android:paddingBottom="16pt"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_no_card_FEF7E7">
        <TextView
            android:text="绑定信用卡并升级VIP后，即可使用自动还款、账单数据同步、信用卡诊断、信用卡消费规划、落地商户消费等功能"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_orange_FF8439"
            android:textSize="14pt"/>
        <TextView
            android:id="@+id/tv_bind_card"
            android:gravity="center_horizontal"
            android:layout_marginTop="14pt"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:textColor="@color/colorPrimary"
            android:text="@string/bind_card"
            android:background="@drawable/bg_bind_card_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
