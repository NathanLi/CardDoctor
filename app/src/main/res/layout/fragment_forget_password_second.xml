<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunkahui.datacubeper.login.ui.ForgetPasswordSecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15pt"
            android:layout_marginLeft="15pt"
            android:layout_marginRight="15pt"
            android:layout_marginTop="20pt"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_color_gray_949494" />

        <com.yunkahui.datacubeper.common.view.SimpleEditTextView
            android:id="@+id/simple_input_item_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_edit_hint="请输入密码"
            app:item_edit_title="重置登陆密码" />

        <View style="@style/common_line" />

        <com.yunkahui.datacubeper.common.view.SimpleEditTextView
            android:id="@+id/simple_input_item_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_edit_hint="请确认密码"
            app:item_edit_title="确认登陆密码" />

    </LinearLayout>


    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@drawable/bg_button_blue_selector"
        android:text="确认重置"
        android:textColor="@color/white" />


</LinearLayout>
