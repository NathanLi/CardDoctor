<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunkahui.datacubeper.home.ui.HomeFragment">

    <com.yunkahui.datacubeper.common.view.SimpleToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="94pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80pt">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="1688.00"
                android:textSize="30pt"
                android:textColor="@color/home_accout_balance_organe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="账户余额"
                android:textSize="18pt"
                android:layout_marginTop="5pt"
                android:textColor="@color/home_total_profit_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="235.00"
                android:textSize="30pt"
                android:textColor="@color/home_accout_balance_organe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="累计分润"
                android:textSize="18pt"
                android:layout_marginTop="5pt"
                android:textColor="@color/home_total_profit_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:background="#F5F5F5"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="270pt" />

    <ImageView
        android:background="@mipmap/ic_launcher"
        android:id="@+id/iv_save_credit_card"
        android:layout_width="match_parent"
        android:layout_height="80pt"/>

</LinearLayout>
