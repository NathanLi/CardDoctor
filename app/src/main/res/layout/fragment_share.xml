<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yunkahui.datacubeper.common.view.SimpleToolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_share_header"
            android:background="#ff0"
            android:contentDescription="@string/default_content_description"
            android:layout_width="match_parent"
            android:layout_height="94pt" />

        <com.yunkahui.datacubeper.common.view.DoubleBlockView
            android:id="@+id/double_block_view_1"
            app:leftName="我的钱包"
            app:rightName="累计分润"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_marginTop="4pt"
            android:background="@color/bg_color_gray_f5f5f5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:layout_marginLeft="20pt"
            android:layout_marginRight="20pt">

            <ImageView
                android:id="@+id/iv_activation_code"
                android:layout_width="24pt"
                android:layout_height="19pt"
                android:contentDescription="@string/default_content_description"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_rest_activation_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10pt"
                android:layout_marginStart="10pt"
                android:layout_toRightOf="@id/iv_activation_code"
                android:layout_toEndOf="@id/iv_activation_code"
                android:text="@string/rest_activation_code"
                android:textColor="@color/text_color_gray_a4aab3"
                android:textSize="17pt" />

            <TextView
                android:id="@+id/tv_rest_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_rest_activation_code_text"
                android:layout_toRightOf="@id/tv_rest_activation_code_text"
                android:text="3000"
                android:textColor="@color/black"
                android:textSize="17pt" />

            <TextView
                android:id="@+id/btn_produce_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="12pt"
                android:padding="8pt"
                android:background="@drawable/bg_create_code_button"
                android:textColor="@color/white"
                android:text="@string/produce_activation_code" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:background="@color/bg_color_gray_f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:layout_marginStart="20pt"
            android:layout_marginTop="4pt"
            android:layout_marginBottom="4pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_activation_code"
                android:textColor="@color/black"
                android:textSize="17pt" />

            <TextView
                android:id="@+id/tv_my_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="@color/black"
                android:textSize="24pt" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_marginTop="4pt"
            android:background="@color/bg_color_gray_f5f5f5"
            android:layout_marginBottom="12pt"/>

        <com.yunkahui.datacubeper.common.view.DoubleBlockView
            android:id="@+id/double_block_view_2"
            app:leftName="普通会员"
            app:rightName="VIP会员"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16pt"
            android:layout_marginBottom="16pt"
            android:layout_marginLeft="20pt"
            android:layout_marginRight="20pt">

            <ImageView
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:contentDescription="@string/default_content_description"
                android:background="@mipmap/ic_launcher"/>

            <TextView
                android:layout_marginLeft="12pt"
                android:layout_marginStart="12pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看更多奖励、分润、升级、加盟政策   >>"
                android:textColor="@color/line_blue_23a2fd"
                android:textSize="14pt" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:background="@color/bg_color_gray_f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginTop="24pt">

            <TextView
                android:id="@+id/tv_link_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_share_button"
                android:gravity="center"
                android:padding="10pt"
                android:text="@string/link_share"
                android:textColor="@color/bg_color_orange_ff5a00"
                android:textSize="17pt" />

            <TextView
                android:id="@+id/tv_qr_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginStart="10pt"
                android:layout_weight="1"
                android:background="@drawable/bg_share_button"
                android:gravity="center"
                android:padding="10pt"
                android:text="@string/qr_share"
                android:textColor="@color/bg_color_orange_ff5a00"
                android:textSize="17pt" />

            <TextView
                android:id="@+id/tv_vip_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginStart="10pt"
                android:layout_weight="1"
                android:background="@drawable/bg_share_button"
                android:gravity="center"
                android:padding="10pt"
                android:text="@string/vip_course"
                android:textColor="@color/bg_color_orange_ff5a00"
                android:textSize="17pt" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>