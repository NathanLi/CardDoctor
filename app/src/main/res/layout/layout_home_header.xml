<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="94pt">

    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_scan"
            android:background="@mipmap/ic_scan01"
            android:layout_centerHorizontal="true"
            android:layout_width="28pt"
            android:layout_height="28pt" />
        <TextView
            android:layout_marginTop="8pt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_scan"
            android:text="扫一扫"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qr"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_qr"
            android:background="@mipmap/ic_qr01"
            android:layout_centerHorizontal="true"
            android:layout_width="28pt"
            android:layout_height="28pt" />
        <TextView
            android:layout_marginTop="8pt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_qr"
            android:text="二维码"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_receive_money"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_receive_money"
            android:background="@mipmap/ic_receive_money"
            android:layout_centerHorizontal="true"
            android:layout_width="28pt"
            android:layout_height="28pt" />
        <TextView
            android:layout_marginTop="8pt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_receive_money"
            android:text="收款"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>