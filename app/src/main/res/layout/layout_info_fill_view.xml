<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12pt">

        <TextView
            android:id="@+id/tv_info_name"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="17pt" />

        <EditText
            android:id="@+id/et_info"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@null"
            android:ellipsize="end"
            android:textSize="17pt"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="17pt"
            android:textColor="@color/add_card_text_color_gray_aaaaaa"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_info_dest"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="17pt" />

        <ImageView
            android:id="@+id/iv_info_icon"
            android:layout_width="24pt"
            android:layout_height="24pt"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:layout_marginRight="10pt" />

    </LinearLayout>
    <View
        android:id="@+id/line_indicator"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_gravity="bottom"
        android:background="@color/line_gray_e5e5e5" />
</LinearLayout>