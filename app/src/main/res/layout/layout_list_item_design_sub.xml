<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8pt"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16pt">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24pt"
            android:layout_height="24pt"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/default_content_description"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8pt"
            android:layout_marginStart="8pt"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14pt"
                    tools:text="消费-民生" />

                <TextView
                    android:id="@+id/tv_spend_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:textSize="14pt"
                    tools:text="533" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8pt">

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bill_card_item_extend_text_color_gray_666666"
                    android:textSize="14pt"
                    tools:text="休闲会所类" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8pt">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/bill_card_item_extend_text_color_gray_666666"
                    android:textSize="12pt"
                    tools:text="2012-5-30" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4pt"
                    android:layout_marginStart="4pt"
                    android:layout_toEndOf="@+id/tv_time"
                    android:layout_toRightOf="@+id/tv_time"
                    android:textSize="10pt"
                    android:paddingLeft="2pt"
                    android:paddingRight="2pt"
                    android:paddingBottom="2pt"
                    android:background="@drawable/design_sub_pos_shape"
                    android:textColor="@color/white"
                    tools:text="pos" />

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4pt"
                    android:layout_marginStart="4pt"
                    android:layout_toEndOf="@+id/tv_type"
                    android:layout_toRightOf="@+id/tv_type"
                    android:textSize="12pt"
                    android:textColor="@color/colorPrimary"
                    tools:text="标记" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="14pt"
                    tools:text="已操作" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>