<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3pt"
    android:layout_marginLeft="12pt"
    android:layout_marginRight="12pt"
    android:layout_marginTop="3pt"
    app:cardCornerRadius="5dp"
    app:cardElevation="5px"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="10pt">

            <ImageView
                android:id="@+id/image_view_icon"
                android:layout_width="35pt"
                android:layout_height="35pt" />

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15pt"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="16pt" />

            <TextView
                android:id="@+id/text_view_right_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原因 >"
                android:textColor="@color/text_color_orange_ff5c03"
                android:textSize="16pt" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_gray_e2e2e2"
            android:gravity="center"
            android:padding="15pt">

            <Button
                android:id="@+id/button_submit_1"
                android:layout_width="100pt"
                android:layout_height="40pt"
                android:background="@drawable/bg_button_login_selector"
                android:text="激活规划"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_submit_2"
                android:layout_width="100pt"
                android:layout_height="40pt"
                android:layout_marginLeft="50pt"
                android:background="@drawable/bg_border_blue_soild_white"
                android:text="重新规划"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
