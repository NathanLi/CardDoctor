<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/layout_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bank_icon"
                android:background="@mipmap/bank_zhongguonongye"
                android:layout_width="32pt"
                android:layout_height="32pt"
                android:contentDescription="@string/default_content_description"
                android:layout_marginBottom="16pt"
                android:layout_marginLeft="16pt"
                android:layout_marginStart="16pt"
                android:layout_marginTop="16pt" />

            <TextView
                android:id="@+id/tv_bank_name"
                android:text="农业银行"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4pt"
                android:layout_marginStart="4pt"
                android:layout_toRightOf="@+id/iv_bank_icon"
                android:layout_toEndOf="@+id/iv_bank_icon"
                android:textColor="@color/text_color_dark_gray_404040"
                android:textSize="16pt" />

            <TextView
                android:id="@+id/tv_bank_card_id"
                android:text="[尾号8888]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4pt"
                android:layout_marginStart="4pt"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/tv_bank_name"
                android:layout_toEndOf="@+id/tv_bank_name"
                android:textColor="@color/text_color_dark_gray_404040"
                android:textSize="16pt" />

            <ImageView
                android:id="@+id/iv_sample"
                android:visibility="gone"
                android:layout_toRightOf="@+id/tv_bank_card_id"
                android:layout_marginLeft="-24pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_sample_red"/>

            <TextView
                android:id="@+id/tv_card_holder"
                android:text="张三"
                android:layout_marginRight="18pt"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_color_dark_gray_404040"
                android:maxLines="1"
                android:textSize="18pt"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray_e5e5e5" />
        <RelativeLayout
            android:paddingLeft="20pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_bill_date"
                android:text="账单日：5月20日"
                android:textSize="14pt"
                android:layout_marginTop="12pt"
                android:layout_marginBottom="8pt"
                android:textColor="@color/text_color_dark_gray_404040"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_repay_date"
                android:layout_below="@+id/tv_bill_date"
                android:text="还款日：5月20日"
                android:layout_marginBottom="12pt"
                android:textSize="14pt"
                android:textColor="@color/text_color_dark_gray_404040"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_unbind"
                android:paddingLeft="24pt"
                android:paddingRight="24pt"
                android:paddingTop="4pt"
                android:paddingBottom="4pt"
                android:textSize="12pt"
                android:layout_centerVertical="true"
                android:layout_marginRight="14pt"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_corner_button_unbind_shape"
                android:textColor="@color/white"
                android:text="@string/unbind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>