<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#bcbbc1"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_left_0043"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.043"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_left_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_left_097"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:lines="1"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_left_01"/>

        <ImageView
            android:id="@+id/iv_indicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_circle_shape"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_left_0043"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8e8e93"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_left_01"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:lines="1"
            android:textColor="#000000"
            app:layout_constraintRight_toLeftOf="@+id/guideline_left_097"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            app:layout_constraintRight_toLeftOf="@+id/guideline_left_097"
            app:layout_constraintTop_toTopOf="@+id/tv_time"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
