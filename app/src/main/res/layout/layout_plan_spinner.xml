<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5pt"
        android:layout_marginLeft="8pt"
        android:layout_marginRight="8pt"
        android:layout_marginTop="5pt"
        android:layout_toLeftOf="@+id/image_view_arrow"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="center"
        android:textColor="@color/text_color_black_212c68"
        android:textSize="15pt" />

    <ImageView
        android:id="@+id/image_view_arrow"
        android:layout_width="16pt"
        android:layout_height="11pt"
        android:layout_marginRight="15pt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_arrow_bottom_yellow"/>

    <View
        android:id="@+id/view_point"
        android:layout_width="8pt"
        android:layout_height="8pt"
        android:layout_toLeftOf="@+id/image_view_arrow"
        android:layout_alignTop="@+id/image_view_arrow"
        android:background="@drawable/bg_circle_shape_red"
        android:visibility="gone" />

</RelativeLayout>
