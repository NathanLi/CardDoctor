<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.64" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <View
        android:layout_width="0pt"
        android:layout_height="1pt"
        app:layout_constraintTop_toTopOf="@+id/text_view_circle_1"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_circle_1"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintRight_toRightOf="@+id/guideline4"
        android:background="@color/bg_button_gray_a9a9a9"/>

    <TextView
        android:id="@+id/text_view_circle_1"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:background="@drawable/bg_circle_gray_normal"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintRight_toRightOf="@+id/guideline1" />

    <TextView
        android:id="@+id/text_view_circle_2"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:background="@drawable/bg_circle_gray_normal"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="@+id/guideline2" />

    <TextView
        android:id="@+id/text_view_circle_3"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:background="@drawable/bg_circle_gray_normal"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintRight_toRightOf="@+id/guideline3" />

    <TextView
        android:id="@+id/text_view_circle_4"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:background="@drawable/bg_circle_gray_normal"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintRight_toRightOf="@+id/guideline4" />

    <TextView
        android:id="@+id/text_view_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:text="提交申请"
        app:layout_constraintTop_toBottomOf="@+id/text_view_circle_1"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintRight_toRightOf="@+id/guideline1"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/text_view_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:text="上传资料"
        app:layout_constraintTop_toBottomOf="@+id/text_view_circle_2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/text_view_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:text="审核"
        app:layout_constraintTop_toBottomOf="@+id/text_view_circle_3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintRight_toRightOf="@+id/guideline3"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/text_view_title_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:text="完成"
        app:layout_constraintTop_toBottomOf="@+id/text_view_circle_4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintRight_toRightOf="@+id/guideline4"
        android:textSize="14pt" />

</android.support.constraint.ConstraintLayout>
