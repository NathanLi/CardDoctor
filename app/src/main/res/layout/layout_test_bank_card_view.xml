<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#f5f5f5"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10pt"
            android:paddingLeft="15pt"
            android:paddingRight="15pt"
            android:paddingTop="10pt">

            <ImageView
                android:id="@+id/image_view_icon"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="18pt"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_view_icon"
                android:layout_marginLeft="10pt"/>

            <TextView
                android:id="@+id/text_view_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="16pt"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_view_name"
                android:layout_marginLeft="18pt"/>


            <TextView
                android:id="@+id/text_view_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingTop="5pt"
                android:paddingBottom="5pt"
                android:paddingLeft="10pt"
                android:paddingRight="10pt"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_circle_shape_blue"/>

        </RelativeLayout>

        <View style="@style/common_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15pt">

            <TextView
                android:id="@+id/text_view_bank_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18pt"
                android:lines="1"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_view_bank_name_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18pt"
                android:lines="1"
                android:textColor="@color/black"
                android:layout_marginLeft="10pt"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15pt"
            android:paddingRight="15pt"
            android:paddingBottom="10pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_kind_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:background="@drawable/bg_stroke_shape_red"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:paddingTop="3pt"
                android:paddingBottom="3pt"
                android:textSize="14pt"
                android:lines="1"
                android:gravity="center"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/text_view_kind_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff8c00"
                android:background="@drawable/bg_stroke_shape_red"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:paddingTop="3pt"
                android:paddingBottom="3pt"
                android:textSize="14pt"
                android:ellipsize="end"
                android:lines="1"
                android:gravity="center"
                android:layout_marginLeft="10pt"/>

            <TextView
                android:id="@+id/text_view_kind_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_stroke_shape_red"
                android:paddingLeft="5pt"
                android:paddingRight="5pt"
                android:paddingTop="3pt"
                android:paddingBottom="3pt"
                android:textSize="14pt"
                android:lines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:layout_marginLeft="10pt"/>

            <TextView
                android:id="@+id/text_view_kind_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:gravity="right"
                android:textSize="16pt"
                android:lines="1"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
