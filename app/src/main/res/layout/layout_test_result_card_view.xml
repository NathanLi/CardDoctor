<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_card_result"
    android:orientation="vertical"
    android:paddingBottom="15pt"
    android:paddingLeft="40pt"
    android:paddingRight="40pt"
    android:paddingTop="15pt">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_view_icon"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:src="@mipmap/bank_guangdongfazhan"/>

        <TextView
            android:id="@+id/text_view_bank_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15pt"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="140pt"
            android:textColor="@color/white"
            android:textSize="18pt"
            android:text="广东发展"/>

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/white"
            android:text="刘德华"
            android:textSize="18pt" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50pt"
        android:text="8888 **** **** 8888"
        android:layout_marginTop="20pt"
        android:textColor="@color/white"
        android:textSize="22pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="50pt">

        <TextView
            android:id="@+id/text_view_lines"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingExtra="5pt"
            android:maxLines="2"
            android:text="10000\n固定额度"
            android:paddingLeft="15pt"
            android:textColor="@color/text_color_black_212c68" />

        <TextView
            android:id="@+id/text_view_bill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingExtra="5pt"
            android:maxLines="2"
            android:paddingLeft="15pt"
            android:text="10000\n本期账单"
            android:textColor="@color/text_color_black_212c68" />

    </LinearLayout>

</LinearLayout>
