<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DoubleBlockView">
        <attr name="leftTitle" format="string" />
        <attr name="rightTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="SegmentView">
        <attr name="leftSegment" format="string" />
        <attr name="rightSegment" format="string" />
    </declare-styleable>

    <declare-styleable name="InfoFillView">
        <attr name="infoName" format="string" />
        <attr name="infoDest" format="string" />
        <attr name="inputHint" format="string" />
        <attr name="infoIcon" format="reference" />
        <attr name="inputVisible">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="lineVisible">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="isTextView" format="boolean" />
        <attr name="destColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MenuSimpleItemView">
        <attr name="item_title" format="string|reference" />
        <attr name="item_subtitle" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="SimpleEditTextView">
        <attr name="item_edit_title" format="string|reference"/>
        <attr name="item_edit_hint" format="string|reference"/>
        <attr name="item_edit_text" format="string|reference"/>
        <attr name="item_edit_enable" format="boolean"/>
        <attr name="item_edit_focusable" format="boolean"/>
        <attr name="item_edit_right_icon" format="reference"/>
        <attr name="item_edit_input_type" format="enum">
            <enum name="number" value="2"/>
            <enum name="textPassword" value="128"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SimpleTextView">
        <attr name="simple_title" format="string|reference"/>
        <attr name="simple_hint" format="string|reference"/>
        <attr name="simple_text" format="string|reference"/>
        <attr name="simple_right_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="UpgradeJoinItemView">
        <attr name="uj_icon_background_color" format="string"/>
        <attr name="uj_icon_title" format="string|reference"/>
        <attr name="uj_icon_sub_title" format="string|reference"/>
        <attr name="uj_title" format="string|reference"/>
        <attr name="uj_icon" format="reference"/>
        <attr name="uj_sub_title" format="string|reference"/>
        <attr name="uj_button_text" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="SimpleMenuItemView">
        <attr name="menu_title" format="string|reference"/>
        <attr name="menu_icon" format="reference"/>
        <attr name="menu_right_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SimpleToolbar">
        <attr name="tool_title" format="string|reference"/>
        <attr name="tool_left_text" format="string|reference"/>
        <attr name="tool_right_icon" format="reference"/>
    </declare-styleable>

</resources>