<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="WithdrawDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <declare-styleable name="FillSpinnerView">
        <attr name="title" />
        <attr name="isLine" />
        <attr name="src" />
        <attr name="entries" format="reference" />
    </declare-styleable>

    <style name="TransToolBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="tool_bar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ExitDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="MainRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">1pt</item>
        <item name="android:padding">2pt</item>
        <item name="android:textColor">@color/main_radio_color_selector</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/line_gray_DDDDDD</item>
    </style>

    <style name="common_line_margin_left_15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/line_gray_DDDDDD</item>
        <item name="android:layout_marginLeft">15pt</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>


    <style name="style_plan_top_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14pt</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">10pt</item>
    </style>


    <declare-styleable name="ChartSingleView">
        <attr name="lightColor" />
        <attr name="darkColor" />
        <attr name="lightRatio" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ChartCircleView">
        <attr name="lightColor" />
        <attr name="darkColor" />
        <attr name="lightRatio" />
        <attr name="centerTitle" format="string|reference" />
        <attr name="centerSize" format="dimension|reference" />
        <attr name="centerColor" format="color|reference" />
        <attr name="circleWidth" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="ChartTypeView">
        <attr name="lightColor" />
        <attr name="colorType">
            <enum name="point" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RiskTestView">
        <attr name="risk_title" format="string|reference" />
        <attr name="risk_tips" format="string|reference" />
        <attr name="risk_result_background" format="reference" />
    </declare-styleable>

    <declare-styleable name="TestRefundCountView">
        <attr name="refund_title" format="string|reference" />
        <attr name="refund_tips" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="TestInterestView">
        <attr name="interest_title" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="TestConsumerTrendsView">
        <attr name="consumer_title" format="string|reference" />
        <attr name="consumer_tips" format="string|reference" />
    </declare-styleable>

</resources>
