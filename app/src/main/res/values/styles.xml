<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TransToolBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="tool_bar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="MainRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">1pt</item>
        <item name="android:padding">2pt</item>
        <item name="android:textColor">@color/main_radio_color_selector</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/line_gray_DDDDDD</item>
    </style>

    <style name="common_line_margin_left_15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/line_gray_DDDDDD</item>
        <item name="android:layout_marginLeft">15pt</item>
    </style>

    <declare-styleable name="ChartSingleView">
        <attr name="lightColor" />
        <attr name="darkColor" />
        <attr name="lightRatio" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ChartCircleView" >
        <attr name="lightColor" />
        <attr name="darkColor" />
        <attr name="lightRatio" />
        <attr name="centerTitle" format="string" />
        <attr name="centerSize" format="dimension" />
        <attr name="centerColor" format="color" />
        <attr name="circleWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ChartTypeView">
        <attr name="lightColor" />
        <attr name="colorType">
            <enum name="point" value="1"/>
        </attr>
    </declare-styleable>

</resources>
